@model Artigo
@{
    ViewData["Title"] = "Novo Artigo";
}
<h1>Novo Artigo</h1>
<form method="Post" asp-controller="Artigo" asp-action="Criar">
    <div class="mb-2">
        <label asp-for="Categoria_ID" class="form-label"></label>
        <input type="text" asp-for="Categoria_ID" class="form-control"/>
    </div>
    <div class="mb-2">
        <label asp-for="Titulo" class="form-label"></label>
        <input type="text" asp-for="Titulo" class="form-control"/>
    </div>
    <div class="mb-2">
        <label asp-for="texto" class="form-label"></label>
        <textarea type="text" asp-for="texto" class="form-control" rows="5" cols="33"></textarea>
    </div>
    <div class="mb-2 col-6">
        <label asp-for="DataCriacao" class="form-label"></label>
        <input type="date" asp-for="DataCriacao" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>
