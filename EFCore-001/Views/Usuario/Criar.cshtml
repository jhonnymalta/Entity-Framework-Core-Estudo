@model Usuario
@{
    ViewData["Title"] = "Criar Usuário";
}
<h3>Criar novo usuário</h3>
<div class="row">
    <form method="post" asp-action="Criar" asp-controller="Usuario" class="col-6">
        <div class="mb-2">
            <label asp-for="Nome" class="form-label"></label>
            <input type="text" asp-for="Nome" class="form-control" />
        </div>
        <div class="mb-2">
            <label asp-for="email" class="form-label"></label>
            <input type="text" asp-for="email" placeholder="seuemail@email.com" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary px-4" >Criar</button>
    </form>

</div>
